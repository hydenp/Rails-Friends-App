<div style="
  padding: 2rem 1rem;
  margin-bottom: 2rem;
  background-color: #e9ecef;
  border-radius: .3rem;
">

  <h1>
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>

  <p class="">
    <%= @friend.email %> |
    <%= @friend.phone %> |
    <%= @friend.twitter %>
  </p>

  <br />
  <hr />
  <br />

  <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary" %>
  <%= link_to 'Back', friends_path, class:"btn btn-secondary" %>
</div>